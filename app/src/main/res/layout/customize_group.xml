<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/add_smart_blur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/validate_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:background="@drawable/white_border_back">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/group_device_list">
            </LinearLayout>

            <com.cenzer.CustomView.NormalText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Name 1"
                android:gravity="center"
                android:id="@+id/customize_group_name"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/medium_app_text_size"
                android:textColor="@color/white" />

            <com.cenzer.CustomView.NormalText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimming Setting"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/app_text_size"
                style="@style/NormalText"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/white_circle"
                    android:progress="100"
                    android:min="10"
                    android:layout_toLeftOf="@+id/level_percentage"
                    android:id="@+id/customizeGroupSeekBar"
                    android:theme="@style/AppTheme.SeekBar" />
                <com.cenzer.CustomView.HeaderText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="@dimen/medium_app_text_size"
                    android:textColor="@color/white"
                    android:id="@+id/level_percentage"/>
            </RelativeLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Save"
                android:id="@+id/customiseGroupSave"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                style="@style/HeaderText"
                android:visibility="invisible"
                android:background="@drawable/rounded_button_white"/>




        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>










