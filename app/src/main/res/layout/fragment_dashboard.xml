<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Fragments.DashboardFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.cenzer.CustomView.NormalText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/medium_app_text_size"
        android:textAllCaps="true"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Everything you need is here"
        />
    <LinearLayout
        android:layout_width="@dimen/dash_layout_width"
        android:layout_height="@dimen/main_layout_height"
        android:padding="20dp"
        android:id="@+id/dashboard_home_setting_layout"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shadow_16"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:src="@drawable/ic_home_setting"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NormalText"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/white"
            android:text="Home and Settings"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/rounded_gray_border">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dashboard_spinner"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/group_list_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

        <com.cenzer.CustomView.NormalText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/medium_app_text_size"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:text="All Group"
            />
    <com.cenzer.CustomView.NonScrollListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/dash_group_list"
        tools:listitem="@layout/dashboard_list_item"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp">
    </com.cenzer.CustomView.NonScrollListView>
        </LinearLayout>

